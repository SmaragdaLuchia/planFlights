# Use a Java runtime
FROM openjdk:17-jdk

# Set working directory
WORKDIR /app

# Copy the JAR built from Maven/Gradle (make sure to run the build first)
COPY target/*.jar backend.jar

# Expose the port (Spring Boot default is usually 8080)
EXPOSE 8080

# Run the Spring Boot application
ENTRYPOINT ["java", "-jar", "backend.jar"]
